@page "{productId?}"
@model Inventory.Frontend.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Create New Order";
}
 
<h2>Create New Order</h2>
 
<form method="post">
<div class="mb-3">
<label asp-for="NewOrder.OrderDate" class="form-label">Order Date</label>
<input asp-for="NewOrder.OrderDate" class="form-control" type="date" />
<span asp-validation-for="NewOrder.OrderDate" class="text-danger"></span>
</div>
 
    <!-- Example: If there's a single detail pre-filled -->
    @if (Model.NewOrder.Details.Count > 0)
    {
<h4>Product to Order</h4>
<div class="mb-3">
<label>Product ID</label>
<input asp-for="NewOrder.Details[0].ProductId" class="form-control" readonly />
</div>
<div class="mb-3">
<label>Quantity</label>
<input asp-for="NewOrder.Details[0].Quantity" class="form-control" />
</div>
<!-- If you want to allow user to pick Depot, do so here. -->
    }
 
    <button type="submit" class="btn btn-success">Create</button>
<a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>