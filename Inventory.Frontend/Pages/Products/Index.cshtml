@page
@model Inventory.Frontend.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}

@functions {
    private string GetTypeLabel(string typeCode)
    {
        switch (typeCode)
        {
            case "B": return "Book";
            case "P": return "Paper";
            case "W": return "Writing Implements";
            default: return "(Unknown)";
        }
    }
}

<h2>Product Catalog</h2>

<div class="mb-3">
    <a class="btn btn-outline-primary" href="?">All</a>
    <a class="btn btn-outline-primary" href="?productType=P">Paper</a>
    <a class="btn btn-outline-primary" href="?productType=W">Writing Implements</a>
    <a class="btn btn-outline-primary" href="?productType=B">Books</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @for (var i = 0; i < Model.Products.Count; i++)
    {
        var product = Model.Products[i];
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <!-- Use GetTypeLabel() here instead of @product.Type -->
                    <div class="text-end text-muted">
                        @GetTypeLabel(product.Type)
                    </div>

                    <h4>
                        <a href="javascript:void(0);"
                           data-bs-toggle="modal"
                           data-bs-target="#productModal-@i">
                            @product.Name
                        </a>
                    </h4>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text fw-bold">Price: @product.Price</p>
                </div>
            </div>

            <!-- Modal for this product -->
            <div class="modal fade" id="productModal-@i" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <!-- Modal header -->
                        <div class="modal-header">
                            <div class="text-end text-muted" style="width:100%;">
                                <!-- Also show the friendly label here -->
                                @GetTypeLabel(product.Type)
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <h3>@product.Name</h3>
                            <hr />

                            <table class="table">
                                <tbody>
                                    @if (product.Type == "B")
                                    {
                                        <tr>
                                            <th>Author</th>
                                            <td>@(product.Author ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Publisher</th>
                                            <td>@(product.Publisher ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Publication Year</th>
                                            <td>@(product.PublicationYear?.ToString() ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Number of Pages</th>
                                            <td>@(product.NumberOfPages?.ToString() ?? "N/A")</td>
                                        </tr>
                                    }
                                    else if (product.Type == "W")
                                    {
                                        <tr>
                                            <th>Ink Color</th>
                                            <td>@(product.InkColor ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Ink Type</th>
                                            <td>@(product.InkType ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Tip Size</th>
                                            <td>@(product.TipSize?.ToString() ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Lead Hardness</th>
                                            <td>@(product.PencilLeadHardness ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Is Erasable</th>
                                            <td>@(product.IsErasable.ToString() ?? "No")</td>
                                        </tr>
                                    }
                                    else if (product.Type == "P")
                                    {
                                        <tr>
                                            <th>Paper Size</th>
                                            <td>@(product.PaperSize ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Paper Weight</th>
                                            <td>@(product.PaperWeight?.ToString() ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Paper Color</th>
                                            <td>@(product.PaperColor ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <th>Coating</th>
                                            <td>@(product.CoatingType ?? "N/A")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-primary mt-4" asp-page="Create">Create New Product</a>
